{
	"name": "helloworld",
	"displayName": "HelloWorld",
	"description": "",
	"version": "0.0.1",
	"publisher": "radon",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:helloworld.sayHello",
		"onCommand:helloworld.sayGoodbye"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"editor/context": [
				{
				  "when": "resourceLangId == yaml",
				  "command": "helloworld.sayHello",
				  "group": "myGroup@1"
				},
				{
				  "when": "resourceLangId == yaml",
				  "command": "helloworld.sayGoodbye",
				  "group": "myGroup@2"
				}
			]
		},

		"commands": [
			{
				"command": "helloworld.sayHello",
				"title": "Say hello"
			},
			{
				"command": "helloworld.sayGoodbye",
				"title": "Say goodbye"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
